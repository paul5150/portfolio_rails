<% content_for(:title, "Paul Morin | Web Developer") %>

<h1><%= @skill.name %></h1>
<h3><%= @skill.description %></h3>

<% if @skill.projects.any? %>
<h4>Here are the projects for this skill:</h4>

<ul>
  <% @skill.projects.each do |project| %>
  <li>
    <%= project.app %> |
    <%= link_to "Edit", edit_skill_project_path(@skill, project) %> |
    <%= link_to "Delete", skill_project_path(@skill, project),
    :data => {:confirm => "Are you sure?",
      :method => "delete"} %>
        <ul>
          <li><p><%= project.info %></p></li>
        </ul>
    </li>
    <% end %>
  </ul>
  <% else %>
  <p>There are no projects yet!</p>
  <% end %>

  <div class="links">
    <p><%= link_to "Add a project", new_skill_project_path(@skill) %></p>
    <p><%= link_to "Delete Skill", skill_path(@skill),
    :data => {:confirm => "Are you sure?",
      :method => "delete"} %></p>

    <p><%= link_to "Return to Skills", skills_path %></p>
  </div>
